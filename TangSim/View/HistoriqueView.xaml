<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TangSim.View"
             xmlns:lo="clr-namespace:TangSim.View"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TangSim.View.HistoriqueView"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Section des Boutons (Simuler les Onglets) -->
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <!-- Bouton Ventes -->
            <Button x:Name="VentesButton" Text="Ventes" 
                    BackgroundColor="LightGray" TextColor="Black" 
                    BorderColor="DarkGray" BorderWidth="1" Padding="10"
                    Clicked="OnVentesButtonClicked" />

            <!-- Bouton Approvisionnement -->
            <Button x:Name="ApprovisionnementButton" Text="Approvisionnement"
                    BackgroundColor="LightGray" TextColor="Black"
                    BorderColor="Red" BorderWidth="1" Padding="10"
                    Clicked="OnApprovisionnementButtonClicked" />
        </HorizontalStackLayout>

        <!-- Contenu des Onglets -->
        <StackLayout Padding="10">
            <!-- Contenu Ventes -->
            <StackLayout x:Name="VentesContent" IsVisible="True">
                <local:HistVenteView />
                <!-- Contenu pour l'onglet Ventes -->
            </StackLayout>

            <!-- Contenu Approvisionnement -->
            <StackLayout x:Name="ApprovisionnementContent" IsVisible="False">
                <lo:HistAppView />
                <!-- Contenu pour l'onglet Approvisionnement -->
            </StackLayout>
        </StackLayout>

    </VerticalStackLayout>
</ContentPage>