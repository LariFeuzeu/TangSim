<Shell
    x:Class="TangSim.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TangSim"
    xmlns:views="clr-namespace:TangSim.View"
    Shell.FlyoutBehavior="Disabled"
    Title="TangSim">

    <!-- TabBar avec onglets en bas -->
    <TabBar>
        <!-- Onglet pour MainPage -->
        <Tab Title="Accueil" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>

        <!-- Onglet pour ArticleView -->
        <Tab Title="Articles" Icon="code.png">
            <ShellContent ContentTemplate="{DataTemplate views:ArticleView}" Route="ArticleView" />
        </Tab>

        <!-- Onglet pour ApproView -->
        <Tab Title="Appro" Icon="inve.png">
            <ShellContent ContentTemplate="{DataTemplate views:ApproView}" Route="ApproView" />
        </Tab>

        <!-- Onglet pour AchatView -->
        <Tab Title="Vente" Icon="cart.png">
            <ShellContent ContentTemplate="{DataTemplate views:AchatView}" Route="AchatView" />
        </Tab>
        
    </TabBar>
</Shell>