<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TangSim.MainPage"
             BackgroundColor="#F5F5F5">

    <Shell.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <!-- Logo à gauche -->
            <Image Source="tangs.png" HeightRequest="800" WidthRequest="130"
               HorizontalOptions="StartAndExpand" VerticalOptions="Center" />

            <!-- Espace flexible pour pousser le bouton de menu à droite -->
            <BoxView Color="White" HorizontalOptions="FillAndExpand" />

            <!-- Bouton de menu à droite -->
            <Button BackgroundColor="Transparent" Clicked="OnMenuButtonClicked"
                HorizontalOptions="End" VerticalOptions="Center" Scale="0.7"
                WidthRequest="40" HeightRequest="40" Padding="0" Margin="0">
                <Button.ImageSource>
                    <FileImageSource File="menu.png" />
                </Button.ImageSource>
            </Button>
        </StackLayout>
    </Shell.TitleView>

    <!-- Contenu de la page -->
    <StackLayout>
        <!-- Menu déroulant personnalisé -->
        <Frame x:Name="MenuDropdown" IsVisible="False" BackgroundColor="White" Padding="10" 
               HorizontalOptions="End" VerticalOptions="Start" Margin="0,10,10,10" CornerRadius="30">
            <VerticalStackLayout>
                <Button Text="Historique des Ventes" Clicked="OnVentesButtonClicked" BackgroundColor="Transparent" TextColor="Black" />
                <Button Text="Historique des Achats" Clicked="OnApprovisionnementButtonClicked" BackgroundColor="Transparent" TextColor="Black" />
            </VerticalStackLayout>
        </Frame>


        <!-- Bouton flottant pour ajouter un article -->
        <ImageButton 
            Source="add.png"
            Aspect="AspectFit"
            HeightRequest="60"
            WidthRequest="80"
            Margin="0,0,0,40"
            HorizontalOptions="CenterAndExpand"
            Clicked="OnRegisterArticleClicked"
            VerticalOptions="EndAndExpand"
            x:Name="FloatingButton"/>

            <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnPageTapped" />
        </StackLayout.GestureRecognizers>  
        
    </StackLayout>
</ContentPage>